## Menu for grub4dos
#timeout=20
#default=1
#gfxmenu = /grub/gfx-theme2
#splashimage = /grub/splash.xpm.gz
foreground = white
background = light-gray

title Backup & Restore (Acronis)
find --set-root /_grup4dos/backup.lst
configfile /_grub4dos/bakcup.lst

#title Windows...
#find --set-root /_grub4dos/windows.lst
#configfile /_grub4dos/windows.lst

title HDD tools ...
find --set-root /_grub4dos/hdd_tools.lst
